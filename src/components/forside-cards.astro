---
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Google from "../assets/images/google-maps.png";
import { Image } from 'astro:assets';
import Billede1 from "../assets/images/card-mennesker.png";
import Billede2 from "../assets/images/daaser-card.png";
import Pin from "../assets/images/pin.png";
---
<article class="grid grid-cols-1 md:grid-cols-2 items-center md:justify-center mx-sm md:mx-lg lg:mx-2xl gap-sm md:gap-lg lg:gap-2xl my-xl">
    <a href="/produktliste">   
<div class="bg-beige-50 p-sm shadow-short hover:shadow-hover flex flex-col justify-center items-center transition-all ease-in hover:rotate-1">
    <Image class="w-ml" src={Pin} alt="Billede af kiosken"/>
    <Image class="w-full md:w-8xl h-auto" src={Billede2} alt="Billede af kiosken"/>
    <h4>Check vores varer ud:</h4>
</div>
</a>   
<a href="/om-os">      
<div class="bg-beige-50 p-sm shadow-short hover:shadow-hover flex flex-col justify-center items-center transition-all ease-in hover:rotate-1">
    <Image class="w-ml" src={Pin} alt="Billede af kiosken"/>
    <Image class="w-full md:w-8xl h-auto" src={Billede1} alt="Billede af kiosken"/>
    <h4>Hvem er vi?</h4>
</div>
</a>  
</article>